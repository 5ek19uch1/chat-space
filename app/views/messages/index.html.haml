.upper-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          =current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to new_group_path do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            =link_to edit_user_path(current_user) do
              %i.fa.fa-cog
    .groups
      -current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message


  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group SAMPLE current-group
        .main-header__left-box__member-list
          %p MEMBER:
          .main-header__left-box__member-list__member SAMPLE member
      .main-header__edit-button Edit


    .messages
      = render @messages

    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'



